<main>

    <div>
        <nav id="navContainerGrid" class="grid-container">
            <div id="navContainer" class="container-nav">
                <div>
                    <div>
                        <img src="/img/icons8-homero-simpson-30.svg">

                    </div>
                    <p>Collection Animated Figures</p>
                </div>
                <p>Nombre: {{user.first_name}}</p>
                <p>Apellido: {{user.last_name}}</p>
                <p id="cartNumber" data-cart={{user.cart}}>cart: {{user.cart}}</p>
                <div class="fields">
                    <label class="switch2">
                        <input id="switch" type="checkbox">
                        <span class="s2 around2"></span>
                    </label>
                </div>



                <ul>
                    <li><a href="/profile">LOGOUT</a></li>
                    <li id="contCarrito" class="contCarrito"></li>
                    {{user.rol}}
                    {{#if (eq user.rol 'admin')}}
                    <li><a href="/admin">CRUD_ADMIN</a></li>
                    {{/if}}
                </ul>
            </div>

        </nav>


        <div id="modal_container" class="modal-container">
            <div class="modal">
                <h1>Articulos</h1>
                <div id="renderizarCarrito">
                </div>
                <div>
                    <div id="total_compra">
                    </div>
                    <button class="cerrar" id="close">Cerrar</button>
                    <button class="comprar" id="comprar">Comprar</button>
                    <button class="eliminar" id="vaciar">Eliminar Carrito</button>
                </div>
            </div>


        </div>
        <section>
            <div class="pagination_form">
                {{#if hasPrevPage}}
                <a href="{{this.prevLink}}&limit={{this.limit}}&sort={{this.sort}}">&laquo;</a>
                {{/if}}
                &nbsp;
                <a>
                    {{this.page}}
                </a>
                &nbsp;
                {{#if hasNextPage}}
                <a href="{{this.nextLink}}&limit={{this.limit}}&sort={{this.sort}}">&raquo;</a>
                {{/if}}
            </div>
            <div class="formPag">
                <form id="limitForm" action="/api/products" method="get">

                    <label for="limit">Productos por p√°gina:</label>
                    <input type="number" id="limit" name="limit" min="1" value="{{this.limit}}" required>
                    <input type="hidden" name="page" value="{{this.page}}">
                    <label for="limit">sort 1 o -1:</label>
                    <input type="text" id="sort" name="sort" value="">
                    <label for="limit">Stock:</label>
                    <input type="text" id="stock" name="stock" value="">
                    <button type="submit">Aplicar</button>

                </form>
            </div>
    </div>


    </section>


    <section class="grid-sectioncards" id="cardcontainer">
        {{#each docs}}
        <form class="cardProduct" id="cardProduct" action="">
            <div style="width: 15rem" id="containerCards">
                <div class="card-container">
                    <div class="card-image">
                        <img src={{this.thumbnail}}>
                    </div>
                    <div class="card-descripcion">
                        <p class="id" name="id" hidden>{{this.id}}</p>
                        <p class="thumbnail" name="thumb" hidden>{{this.thumbnail}}</p>
                        <p class="name" data-name="name">{{this.name}}</p>
                        <p class="description" data-name="description">{{this.description}}</p>
                        <p class="price" name="price">${{this.price}}</p>
                        <p class="stock" name="stock">STOCK:{{this.stock}}UN</p>
                        <p id="idCart">cart:{{user.cart}}</p>
                    </div>
                    <div class="button-add">
                        <button class="add" id="add{{this.id}}">+</button>
                        <button class=" res" id="res{{this.id}}">-</button>
                    </div>
                    <div class="button-addcart">
                        <button class="sub" type="submit" id="boton{{this.id}}">Add To Cart</button>
                    </div>
                    <div class="input-cantidad">
                        <div id="valorcontador">0</div>
                    </div>
                </div>
            </div>
        </form>

        {{/each}}
    </section>




    <section>

        <footer>
            <div class="footerHeader">
                <div>
                    <h1>Coolection Animated Figured</h1>
                </div>

            </div>


            <div class="footerDiv">
                <div>
                    <img src="/img/homeroRosquilla.png">


                </div>
            </div>
        </footer>
    </section>
</main>


<script src="/js/index.js"></script>